function new_drop()
	local a = {
		q1 = 004 + rnd"4",
		q2 = 000,
		q3 = 004 + rnd"4",
		q4 = 004 + rnd"4",
		col = 3,
		move = move_drop
	}
	move_drop(a, true)
	return a
end

function move_drop(a, new)
	local c = a.col
	if not new then
		mset(c,0,000)
		mset(c+1,0,000)
		mset(c,1,000)
		mset(c+1,1,000)
		if btnp"4" or btnp"5" then
			gravity_drop(a.q3,c)
			gravity_drop(a.q4,c+1)
			gravity_drop(a.q1,c)
			gravity_drop(a.q2,c+1)
			gs = combo()
			return
		end
		if (btnp"0") c -= 1
		if (btnp"1") c += 1
		c = min(max(c,1),5)
		if btnp "2" then
			local qt = a.q1
			a.q1 = a.q2
			a.q2 = a.q4
			a.q4 = a.q3
			a.q3 = qt
		end
	end
	mset(c,0,a.q1)
	mset(c+1,0,a.q2)
	mset(c,1,a.q3)
	mset(c+1,1,a.q4)
	a.col = c
end

function gravity_drop(tile,col)
	local row=0
	repeat	row+=1
	until fget(mget(col,row),0)
	mset(col,row-1,tile)
end

