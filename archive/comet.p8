pico-8 cartridge // http://www.pico-8.com
version 18
__lua__
function _init()
	poke(24365,1)
	e={}
end

function _update()
	x,y=stat(32),stat(33)
	if stat(34)==1 and not mdown then
		tx,ty=x,y
		mdown=true
	elseif stat(34)==0 and mdown then
		a={
			x=tx,
			y=ty,
			res=flr(rnd(4)),
			size=200+rnd(300)
		}
		if a.res==2 then
			if(flr(rnd(3))==0)a.res=0
		elseif a.res==3 then
			if(flr(rnd(2))==0)a.res=1
			a.size-=100
		end
		add(e,a)
		mdown=false
	end
end

function _draw()
	cls()
	for a in all(e) do
		circ(a.x,a.y,10,6)
		if(a.res==0)color(9)
		if(a.res==1)color(6)
		if(a.res==2)color(12)
		if(a.res==3)color(11)
		circfill(a.x,a.y,a.size/100)
	end
	if(tx)pset(tx,ty,7)
	pset(x,y,7)
end
