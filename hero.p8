pico-8 cartridge // http://www.pico-8.com
version 18
__lua__
function dpad(mult)
	local dx,dy=0,0
	if(btn"0")dx-=mult
	if(btn"1")dx+=mult
	if(btn"2")dy-=mult
	if(btn"3")dy+=mult
	return dx,dy
end

function player(x,y)
	return{
		x=x,
		y=y,
		speed=3,
		update=function(a)
			local dx,dy=dpad(a.speed)
			a.x=a.x+dx
			a.y=a.y+dy
		end,
		draw=function(a)
			spr(1,a.x,a.y)
		end
	}
end

function _init()
	pl=player(32,32)
end

function _update()
	pl:update()
end

function roomcam(a)
	camera(flr(a.x/128)*128,
		flr(a.y/128)*128)
end

function _draw()
	cls()
	roomcam(pl)
	pl:draw()
end
