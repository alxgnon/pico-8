-- sprite frames
f =
{ born = 001
, crux = 002
}

function delts(speed)
	local dx,dy = 0,0
	if (btn"0") dx -= speed
	if (btn"1") dx += speed
	if (btn"2") dy -= speed
	if (btn"3") dy += speed
	return dx,dy
end

function pallergy(a, x,y)
	if pget(x,y) == 8 then
		if not a.dead then
			a.dead = true
		end
	end
end

function allergy(a)
 local x,y = a.x,a.y
	for j=y+1,y+5 do
		pallergy(a, x+3,j)
	end
	pallergy(a, x+2,y+2)
	pallergy(a, x+4,y+2)
end

function _jesus(x,y)
	return
	{ f = f.crux
	, x=x,y=y
	, speed = 2
	, aura = _aura(x,y)

	, move =
	function(a)
		if (a.dead) return
		
		local dx,dy = delts(a.speed)
		a.x += dx
		a.y += dy
		
		a.x = max(min(a.x,123),-2)
		a.y = max(a.y,-1)

		a.aura:move(a.x,a.y)
		
		if a.y > 127 then
			descend()
		end
	end

	, draw =
	function(a)
		a.aura:draw()
		spr(a.f, a.x,a.y)
	end
	}
end

function _aura(x,y)
	local tail = {}
	for i=1,4 do
		add(tail, {f=f.crux+i,x=x,y=y})
	end
	
	return
	{ tail = tail

	, move =
	function(a, x,y)
		for b in all(a.tail) do
			local tx,ty = b.x,b.y
			b.x,b.y = x,y
			x,y = tx,ty
		end
	end

	, draw =
	function(a)
		for b in all(a.tail) do
			spr(b.f, b.x,b.y)
		end
	end
	}
end
-->8
-- next level
function descend()
	gamestate.fadeout = 136
end

function _level(n)
	local lvl =
	{ n = n
	, x = flr(n / 4) * 16
	, y = n % 4 * 16
	, fadein = 136 }

	for x=0,15 do
		if mget(lvl.x+x,lvl.y)==f.born then
			lvl.jc = _jesus(x*8,0)
			break
		end
	end

	function lvl:move()
		if self.fadein > 0 then
			self.fadein -= 8
			return
		elseif self.fadeout and
				self.fadeout > 0 then
			self.fadeout -= 8
			if self.fadeout <= 0 then
				gamestate =
				_level(self.n+1)
			end
			return
		end

		self.jc:move()
	end

	function lvl:draw()
		cls()
		map(self.x,self.y,0,0,16,16)
		allergy(self.jc)
		self.jc:draw()

		if self.fadein > 0 then
			rectfill(0,0,127,self.fadein,8)
		elseif self.fadeout and
				self.fadeout > 0 then
			rectfill(0,self.fadeout,127,127,8)
		end
	end

	return lvl
end

-- change transparent colour
function transparent(colour)
	palt(0,false)
	palt(colour,true)
end

function _init()
	transparent(12)
	gamestate = _level(0)
end

function _update()
	gamestate:move()
end

function _draw()
	gamestate:draw()
end
