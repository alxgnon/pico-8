			mset(plrx,plry,frame)
		end
		-- camera
		if(plrx*8-camx>95)camx+=8
		if(plrx*8-camx<32)camx-=8
		if(plry*8-camy>95)camy+=8
		if(plry*8-camy<32)camy-=8
		camx=min(max(camx,0),896)
		camy=min(max(camy,-32),128)
	end
end

