version 18
__lua__
function _init()
	t=0
	x=0
	broken=false
end

function _update()
	if(broken)
	if btnp"4" then
	nextup=mget(x+1,0)
		if nextup==1 then
			mset(x,0,0)
			mset(x+1,0,2)
			x+=1
		elseif nextup==4 then
			broken=true
			mset(x,0,6)
		end
	end
	if t%32==0 then
		mset(x,0,2)
	elseif t%16==12 then
		mset(x,0,3)
	end
	t+=1
end

function _draw()
	cls()
	map(x-2,0,0,32,16,1)
end
