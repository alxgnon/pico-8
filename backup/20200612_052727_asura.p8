-- deva
function _deva(x,y,ctrl)
	return{
		x=x,y=y,
		dx=0,dy=0,
		flap=0,
		control=function(a)
			if(btn(0))a.dx=-3
			if(btn(1))a.dx=3
			if btn(4) and a.flap==0 then
				a.flap=1
				a.dy=-14
			elseif not btn(4) and a.dy>=-3 then
				a.flap=0
			end
		end,
		update=function(a)
			a.x=a.x+a.dx
			a.y=max(a.y+a.dy,8)
			a.dy=a.dy+abs(a.y*0.01)
			a.dx*=0.777
			a.dy*=0.777
		end,
		draw=function(a)
			local f=abs(a.flap)
			local x,y=a.x,a.y
			local dx,dy=a.dx,a.dy
			rectfill(x+2,y-5,x+5,y-2,0)
			rect(x+2,y-5,x+5,y-2,10)
			spr(2+f,x-8,y-dx/2-dy/2,1,1,true)
			spr(2+f,x+8,y+dx/2-dy/2)
			spr(1,x,y)
		end
	}
end
