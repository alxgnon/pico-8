pico-8 cartridge // http://www.pico-8.com
version 18
__lua__
function _init()
	px,py=32,32
	dx,dy=0,0
	pt=0
end

function _update()
	pleft,pright=false,false
	if(btn"0")dx-=1
	if(btn"1")dx+=1
	if(btn"2")dy-=1
	if(btn"3")dy+=1
	if(btn"4")pflip,pleft=true,true
	if(btn"5")pflip,pright=false,true
	dx=min(max(dx*0.91,-8),8)
	dy=min(max(dy*0.91,-8),8)
	px=(px+dx+4)%132-4
	py=(py+dy+4)%132-4
	pt+=1
end

function _draw()
	cls()
	f=flr(pt)%4
	spr(1+f,px,py,1,1,pflip)
	if(f==0)color"10"
	if(f==1)color"7"
	if(f==2)color"14"
	if(f==3)color"4"
	if pleft then
		line(px-2,py+3,px-56,py+3)
	end
	if pright then
		line(px+9,py+3,px+56,py+3)
	end
end
