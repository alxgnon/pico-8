pico-8 cartridge // http://www.pico-8.com
version 27
__lua__
function _init()
	palt(0,false)
	palt(1,true)
	p_x=56
	p_y=56
	epee={}
end

function _update()
	input()
	move_epee()
end

function input()
	speed=5
	if(btn"4")shoot()
	if(btn"5")beam()
	if(btn"0")p_x-=speed
	if(btn"1")p_x+=speed
	if(btn"2")p_y-=speed
	if(btn"3")p_y+=speed
	if(not btn"4")release()
end

function shoot()
	if released then
		released=false
		add(epee,{x=p_x+4,y=-40})
	end
	p_f=44
end

function beam()
	speed=3
end

function release()
	released=true
	p_f=12
end

function move_epee()
	for e in all(epee) do
		e.y+=7
	end
end

function _draw()
	cls()
	spr(12,p_x,p_y,2,2)
	for e in all(epee) do
		spr(11,e.x,e.y,1,4)
	end
end
